<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.nepaltourism.UserFormDialogController" spacing="20.0" styleClass="dialog-container">
    <children>
        <!-- Header -->
        <VBox spacing="10.0" styleClass="dialog-header">
            <children>
                <Label fx:id="dialogTitleLabel" styleClass="dialog-title" text="Add User" />
                <Label styleClass="dialog-subtitle" text="Enter user information" />
            </children>
        </VBox>

        <!-- User Form -->
        <GridPane hgap="15.0" vgap="15.0" styleClass="user-form">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <children>
                        <Label styleClass="field-label" text="Full Name *" />
                        <TextField fx:id="nameField" styleClass="form-field" />
                    </children>
                </VBox>
                <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <children>
                        <Label styleClass="field-label" text="Email *" />
                        <TextField fx:id="emailField" styleClass="form-field" />
                    </children>
                </VBox>
                <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <children>
                        <Label styleClass="field-label" text="Phone *" />
                        <TextField fx:id="phoneField" styleClass="form-field" />
                    </children>
                </VBox>
                <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <children>
                        <Label styleClass="field-label" text="User Type *" />
                        <ComboBox fx:id="userTypeCombo" maxWidth="1.7976931348623157E308" styleClass="form-field" />
                    </children>
                </VBox>
                <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <children>
                        <Label styleClass="field-label" text="Password *" />
                        <PasswordField fx:id="passwordField" styleClass="form-field" />
                    </children>
                </VBox>
                <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <children>
                        <Label styleClass="field-label" text="Confirm Password *" />
                        <PasswordField fx:id="confirmPasswordField" styleClass="form-field" />
                    </children>
                </VBox>
                <!-- Guide-specific field -->
                <VBox fx:id="tourAreaBox" spacing="5.0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3">
                    <children>
                        <Label styleClass="field-label" text="Tour Area (for Guides)" />
                        <TextField fx:id="tourAreaField" styleClass="form-field" />
                    </children>
                </VBox>
            </children>
        </GridPane>

        <!-- Error Label -->
        <Label fx:id="errorLabel" styleClass="error-label" />

        <!-- Action Buttons -->
        <HBox alignment="CENTER" spacing="15.0" styleClass="dialog-buttons">
            <children>
                <Button fx:id="cancelButton" styleClass="secondary-button" text="Cancel" />
                <Button fx:id="saveButton" styleClass="primary-button" text="Save" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
