<?xml version="1.0" encoding="UTF-8"?>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.nepaltourism.AttractionFormDialogController" spacing="20.0" styleClass="dialog-container">
    <children>
        <!-- Header -->
        <VBox spacing="10.0" styleClass="dialog-header">
            <children>
                <Label fx:id="dialogTitleLabel" styleClass="dialog-title" text="Add Attraction" />
                <Label styleClass="dialog-subtitle" text="Enter attraction information" />
            </children>
        </VBox>

        <!-- Attraction Form -->
        <GridPane hgap="15.0" vgap="15.0" styleClass="attraction-form">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <children>
                        <Label styleClass="field-label" text="Attraction Name *" />
                        <TextField fx:id="nameField" styleClass="form-field" />
                    </children>
                </VBox>
                <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <children>
                        <Label styleClass="field-label" text="Region *" />
                        <ComboBox fx:id="regionCombo" maxWidth="1.7976931348623157E308" styleClass="form-field" />
                    </children>
                </VBox>
                <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <children>
                        <Label styleClass="field-label" text="Category *" />
                        <ComboBox fx:id="categoryCombo" maxWidth="1.7976931348623157E308" styleClass="form-field" />
                    </children>
                </VBox>
                <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <children>
                        <Label styleClass="field-label" text="Difficulty *" />
                        <ComboBox fx:id="difficultyCombo" maxWidth="1.7976931348623157E308" styleClass="form-field" />
                    </children>
                </VBox>
                <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <children>
                        <Label styleClass="field-label" text="Duration (days) *" />
                        <Spinner fx:id="durationSpinner" maxWidth="1.7976931348623157E308" styleClass="form-field" />
                    </children>
                </VBox>
                <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <children>
                        <Label styleClass="field-label" text="Price (USD) *" />
                        <TextField fx:id="priceField" styleClass="form-field" />
                    </children>
                </VBox>
                <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3">
                    <children>
                        <Label styleClass="field-label" text="Description *" />
                        <TextArea fx:id="descriptionArea" prefRowCount="3" styleClass="form-field" />
                    </children>
                </VBox>
                <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4">
                    <children>
                        <CheckBox fx:id="activeCheckBox" selected="true" styleClass="form-checkbox" text="Active" />
                    </children>
                </VBox>
            </children>
        </GridPane>

        <!-- Error Label -->
        <Label fx:id="errorLabel" styleClass="error-label" />

        <!-- Action Buttons -->
        <HBox alignment="CENTER" spacing="15.0" styleClass="dialog-buttons">
            <children>
                <Button fx:id="cancelButton" styleClass="secondary-button" text="Cancel" />
                <Button fx:id="saveButton" styleClass="primary-button" text="Save" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>