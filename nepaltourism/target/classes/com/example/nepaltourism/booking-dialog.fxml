<?xml version="1.0" encoding="UTF-8"?>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.nepaltourism.BookingDialogController" spacing="20.0" styleClass="dialog-container">
    <children>
        <!-- Header -->
        <VBox spacing="10.0" styleClass="dialog-header">
            <children>
                <Label fx:id="attractionNameLabel" styleClass="dialog-title" text="Book Tour" />
                <Label fx:id="attractionDetailsLabel" styleClass="dialog-subtitle" text="Attraction Details" />
            </children>
        </VBox>

        <!-- Booking Form -->
        <GridPane hgap="15.0" vgap="15.0" styleClass="booking-form">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <children>
                        <Label styleClass="field-label" text="Select Guide" />
                        <ComboBox fx:id="guideComboBox" maxWidth="1.7976931348623157E308" styleClass="form-field" />
                    </children>
                </VBox>
                <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <children>
                        <Label styleClass="field-label" text="Tour Date" />
                        <DatePicker fx:id="tourDatePicker" maxWidth="1.7976931348623157E308" styleClass="form-field" />
                    </children>
                </VBox>
                <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <children>
                        <Label styleClass="field-label" text="Number of People" />
                        <Spinner fx:id="peopleSpinner" maxWidth="1.7976931348623157E308" styleClass="form-field" />
                    </children>
                </VBox>
                <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <children>
                        <Label styleClass="field-label" text="Total Price" />
                        <Label fx:id="totalPriceLabel" styleClass="price-label" text="$0" />
                    </children>
                </VBox>
                <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2">
                    <children>
                        <Label styleClass="field-label" text="Special Requests" />
                        <TextArea fx:id="specialRequestsArea" maxHeight="80.0" prefRowCount="3" styleClass="form-field" />
                    </children>
                </VBox>
            </children>
        </GridPane>

        <!-- Discount Information -->
        <VBox fx:id="discountBox" spacing="10.0" styleClass="discount-section">
            <children>
                <Label styleClass="discount-title" text="Festival Discount Applied!" />
                <Label fx:id="discountLabel" styleClass="discount-text" text="10% discount for Dashain festival" />
            </children>
        </VBox>

        <!-- Safety Alert -->
        <VBox fx:id="safetyBox" spacing="10.0" styleClass="safety-section">
            <children>
                <Label styleClass="safety-title" text="Safety Information" />
                <Label fx:id="safetyLabel" styleClass="safety-text" text="Please ensure you have proper trekking gear and insurance." />
            </children>
        </VBox>

        <!-- Action Buttons -->
        <HBox alignment="CENTER" spacing="15.0" styleClass="dialog-buttons">
            <children>
                <Button fx:id="cancelButton" styleClass="secondary-button" text="Cancel" />
                <Button fx:id="bookButton" styleClass="primary-button" text="Book Now" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>